<style>
  /* 隐藏分类页面的头尾 */
  #header, #footer {
    display: none !important;
  }

  /* 调整 outer 容器 */
  .outer {
    margin: 0 !important;
    padding: 0 !important;
  }

  /* 无头尾分类页面样式 */
  body {
    background: #f5f5f5 !important;
  }

  .container {
    max-width: 1200px !important;
    margin: 20px auto !important;
    padding: 20px !important;
    background: transparent !important;
  }

  h1 {
    text-align: center;
    margin: 30px 0 40px !important;
    color: #333;
    font-size: 2em;
  }

  .project-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 20px;
    margin-bottom: 40px;
  }

  .project-card {
    background: white;
    border-radius: 8px;
    padding: 20px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .project-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }

  .project-card h2 {
    margin: 0 0 10px;
    font-size: 1.3em;
  }

  .project-card h2 a {
    color: #333;
    text-decoration: none;
  }

  .project-card h2 a:hover {
    color: #258fb8;
  }

  .project-meta {
    color: #999;
    font-size: 0.9em;
    margin: 10px 0;
  }

  .project-excerpt {
    color: #555;
    line-height: 1.6;
    margin: 15px 0;
  }

  .btn-download {
    display: inline-block;
    background: #258fb8;
    color: white;
    padding: 8px 16px;
    border-radius: 4px;
    text-decoration: none;
    margin-top: 10px;
    margin-right: 10px;
  }

  .btn-download:hover {
    background: #1d7ba8;
    color: white;
  }

  .project-tags span {
    display: inline-block;
    background: #eee;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 0.85em;
    margin: 2px;
    color: #666;
  }

  @media (max-width: 768px) {
    .project-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<div class="container">
  <h1><%= page.category %></h1>

  <div class="project-grid">
    <% page.posts.each(function(post){ %>
      <div class="project-card">
        <h2>
          <a href="<%= url_for(post.path) %>">
            <%= post.title %>
          </a>
        </h2>

        <p class="project-meta">
          <%= date(post.date, 'YYYY-MM-DD') %>
        </p>

        <div class="project-excerpt">
          <%- post.excerpt || post.content.split('<!-- more -->')[0] %>
        </div>

        <% if (post.download) { %>
          <p>
            <a class="btn-download" href="<%= post.download %>" target="_blank">
              下载源码
            </a>
          <% } %>

          <% if (post.demo) { %>
            <a class="btn-download" href="<%= post.demo %>" target="_blank" style="background: #52c41a;">
              在线体验
            </a>
          </p>
        <% } %>

        <% if (post.tags && post.tags.length) { %>
          <p class="project-tags">
            <% post.tags.forEach(function(tag){ %>
              <span>#<%= tag.name %></span>
            <% }) %>
          </p>
        <% } %>
      </div>
    <% }) %>
  </div>
</div>
