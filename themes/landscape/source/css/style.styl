@import "nib"
@import "_variables"
@import "_util/mixin"
@import "_util/grid"

global-reset()

input, button
  margin: 0
  padding: 0
  &::-moz-focus-inner
    border: 0
    padding: 0

html, body, #container
  height: 100%

body
  background: color-background
  font: font-size font-sans
  -webkit-text-size-adjust: 100%

.outer
  clearfix()
  max-width: (column-width + gutter-width) * columns + gutter-width
  margin: 0 auto
  padding: 0 gutter-width

.inner
  column(columns)

.left, .alignleft
  float: left

.right, .alignright
  float: right

.clear
  clear: both

#container
  position: relative

.mobile-nav-on
  overflow: hidden

#wrap
  height: 100%
  width: 100%
  position: absolute
  top: 0
  left: 0
  transition: 0.2s ease-out
  z-index: 1
  background: color-background
  .mobile-nav-on &
    left: mobile-nav-width

if sidebar and sidebar isnt bottom
  #main
    @media mq-normal
      column(main-column)

if sidebar is left
  @media mq-normal
    #main
      float: right

@import "_extend"
@import "_partial/header"
@import "_partial/article"
@import "_partial/comment"
@import "_partial/archive"
@import "_partial/footer"
@import "_partial/highlight"
@import "_partial/mobile"

if sidebar
  @import "_partial/sidebar"
/* ==== Project Card Layout ==== */

.project-grid
  display flex
  flex-wrap wrap
  gap 20px

.project-card
  width 300px
  padding 20px
  border 1px solid #e0e0e0
  border-radius 10px
  background #ffffff
  box-shadow 0 2px 8px rgba(0,0,0,0.05)
  transition all 0.2s ease

.project-card:hover
  box-shadow 0 6px 18px rgba(0,0,0,0.1)
  transform translateY(-3px)

.project-card h2
  margin-top 0

.project-meta
  font-size 12px
  color #888
  margin-bottom 10px

.project-tags span
  font-size 12px
  margin-right 6px
  color #007acc

.btn-download
  display inline-block
  padding 6px 12px
  background #007acc
  color #fff
  border-radius 6px
  text-decoration none

.btn-download:hover
  background #005fa3